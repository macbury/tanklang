Tank {
  Program   = Block
  Block     = (Statement ";")+
  Statement = "var" id ":" Type "=" value -- decl_assign
            | "var" id ":" Type -- decl

  VarExp    = id
  Type      = "int" | "bool" | "text"

  id        = ~keyword letter*
  keyword   = ("var" | "int" | "bool" | "text")
  number    = digit+
  value     = (number | id)
}
