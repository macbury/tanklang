Tank {
  Program   = Block
  Block     = (Statement "\n"*)+
  Statement = "let" VarExp ":" Type "=" value -- declAssign
            | "let" VarExp ":" Type -- decl
            | "let" VarExp "=" value -- declGuessType

  VarExp    = id
  Type      = "number" | "boolean" | "text"

  id        = ~keyword letter*
  keyword   = ("let" | "number" | "boolean" | "text")
  number    = digit+
  boolean   = ("true" | "false")
  value     = (number | id | boolean)
}
